<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <link rel="stylesheet" type="text/css" href="/css/style.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/6.6.4/sweetalert2.min.js"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/6.6.4/sweetalert2.min.css" />  
        <script src="/js/alerts.js"></script>
        <title>Store Node App</title>
    </head>
    <body>
        if err
            if redirect == "login"
                script.
                    errorAlertLogin("#{err}")
            else
                script.
                    errorAlertRegister("#{err}")
        <div class='container'>
            <div class='divButtons'>
                <a href="#" id="linkRegister" class="btnHome">Register</a>
                <a href="#" id="linkLogin" class="btnHome">Login</a>
            </div>
    
            <form id="formRegister" action='/api/registerUser' method='POST'>
                <img src="img/close.png" alt="Button to Close" id="btnCloseRegister">
                <center><h1>Register</h1></center>
                <div class="divInput">
                    <label>First Name</label><br/>
                    <input type="text" id="txtFirstName" name="txtFirstName" class="txtRegister" placeholder="First Name" required><br/>
                </div>
                <div class="divInput">  
                    <label>Last Name</label><br/>
                    <input type="text" id="txtLastName" name="txtLastName" class="txtRegister" placeholder="Last Name" required><br/>
                </div>
                <div class="divInput">
                    <label>Email Address</label><br/>
                    <input type="email" id="txtEmail" name="txtEmail" class="txtRegister" placeholder="Email Address" required><br/>
                </div>
                <div class="divInput">
                    <label>Password</label><br/>
                    <input type="password" id="txtPassword" name="txtPassword" class="txtRegister" placeholder="Password" required><br/>
                </div>
                <div class="divInput">
                    <label>Confirm Password</label><br/>
                    <input type="password" id="txtConfirmPassword" name="txtConfirmPassword" class="txtRegister" placeholder="Repeat Password" required><br/>                
                </div>
                <div class="divInput">
                    <input type="submit" id="btnSignUp" value="SIGN UP">
                    <input type="reset" value="RESET">
                </div>
            </form>

            <form id="formLogin" action='/api/loginUser' method='POST'>
                <img src="img/close.png" alt="Button close login" id="btnCloseLogin">
                <center><h1>Login</h1></center>
                <div class="divInputLogin">
                    <label>Email Address</label>
                    <input type="email" id="txtEmailLogin" name="txtEmailLogin" class="txtLogin" placeholder="Email Address" required><br/>
                </div>
                <div class="divInputLogin">
                    <label>Password</label>
                    <input type="password" id="txtPasswordLogin" name="txtPasswordLogin" class="txtLogin" placeholder="Password" required><br/>
                </div>
                <div class="divInputLogin">
                    <input type="submit" value="Sign In">
                    <input type="reset" value="Reset">
                </div>
            </form>
        </div>
    </body>

    <script src="/js/mainScript.js"></script>
</html>