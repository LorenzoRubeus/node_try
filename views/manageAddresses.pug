doctype html
html
    head
        meta(http-equiv="Content-Type", content="text/html;charset=UTF-8")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/6.6.4/sweetalert2.min.css")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/6.6.4/sweetalert2.min.js")
        script(src="/js/mainScript.js")
        script(src="/js/alerts.js")
        link(rel="stylesheet", href="/css/styleOperations.css")
        link(rel="stylesheet", href="/css/animateProfile.css")
        title Change Address
    body
        - var count = 0 
        case changedAddress
            when "deleted"
                script.
                    addressDeleted()
            when "added"
                script.
                    addressAdded()
            when "edited"
                script.
                    addressEdited()
        #divContainer
            div#divAddresses
                #divContainerTop
                    while count < 3
                        div(class="divLinkTop")
                            if address.length > count 
                                a(href=`/api/myProfile/changeAddress/pick/${address[count]._id}`)
                                    h5(class="headerLabelLink")= address[count].name
                                    h5(class="headerLabelLink")= address[count].street
                                form(class="formImgDeleteTop", method="post", action=`/api/address/deleteAddress/${address[count]._id}`)
                                    button(type="submit", id="btnDelete")
                                        img(src="/img/deletePaymentAddress.png", alt="Delete Address")
                            else
                                a(href=`/api/address/address`)
                                    img(src="/img/add.png" alt="Icon add address")
                                    p(class="headerLabelLink") Add an address
                        - count++  
                #divContainerBottom
                    while count < 6
                        div(class="divLinkBottom")
                            if address.length > count 
                                a(href=`/api/myProfile/changeAddress/pick/${address[count]._id}`)
                                    p(id="p1Bottom")= address[count].name
                                    p(id="p2Bottom")= address[count].street
                                form(class="formImgDeleteBottom", method="post", action=`/api/address/deleteAddress/${address[count]._id}`)
                                    button(type="submit", id="btnDelete")
                                        img(src="/img/deletePaymentAddress.png", alt="Delete Address")
                            else
                                a(href=`/api/address/address`)
                                    img(src="/img/add.png" alt="Icon add address")
                                    p(class="headerLabelLink") Add an address
                        - count++
                div#divBack
                    a(href=`/api/myProfile`, id="btnBack") 
                        label Go back to your profile