doctype html
html
    head
        meta(http-equiv="Content-Type", content="text/html;charset=UTF-8")
        title= user.firstName + " " + user.lastName + "'s basket"
    body
        #divContainer
            #divProducts
                each val in basket.products
                     form(action=`/api/basket/addBasket/${val._id}/${token}`, method="post")
                        a(href=`#`)= val.name
                        label  di
                        label= " " + val.seller.firstName + " " + val.seller.lastName
                        p= " Price: " + val.price + "â‚¬"
                        #divButtonsProduct
                            button(type="submit") Remove from the basket
                        hr
                p= "Total: " + basket.price
                
