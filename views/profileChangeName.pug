doctype html
html
    head 
        meta(http-equiv="Content-Type", content="text/html;charset=UTF-8")
        link(rel="stylesheet", href="/css/styleOperations.css")
        title Change Name
    body
        div#divContainer
            div#divForm
                a(href=`/api/myProfile/${token}`)
                    img(src="/img/back.png", class="btnCloseForm", alt="Go back")
                form(action=`/api/myProfile/changeName/${token}`, method="post")
                    div(class="divInput")
                        label First Name
                        input#txtFirstName(type="text", name="txtFirstName", class="txtChangeName", value=user.firstName)
                    div(class="divInput")
                        label Last Name
                        input#txtLastName(type="text", name="txtLastName", class="txtChangeName", value=user.lastName)
                    div(class="divInput")
                        input(type="submit", value="Change")
                        input(type="reset", value="Reset")