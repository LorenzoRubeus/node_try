doctype html
html
    head
        title Store App
        meta(charset = 'UTF-8')
        link(rel="stylesheet", href="/css/styleProducts.css")
        link(rel="stylesheet", href="https://use.fontawesome.com/releases/v5.3.1/css/all.css")
    body    
        #container
            #divNav
                #divBasket
                    a(href=`/api/basket/${token}`)= basket.count + " Basket" 
                #divProfile
                    a(href=`/api/myProfile/${token}`) My Profile
            #divProducts
                #listFilter
                    p Filters
                    label(id="typeFitler1") Name:
                    ul
                        li
                            a(href="/api/products/", class="linkFilter") From A to Z
                        li    
                            a(href='/api/products/nameDecrescente', class="linkFilter") From Z to A
                    br
                    #divTypeFitler2
                        label(id="typeFitler2") Price:
                        ul
                            li
                                a(href='/api/products/priceCrescente', class="linkFilter") Increasing
                            li
                                a(href='/api/products/priceDecrescente', class="linkFilter") Decreasing
                #divListCategories
                    ul(id='listCategory')
                        each val in categories
                            li 
                                a(href=`/api/products/filterCategory/${val['_id']}`)= val['name']
                #divListProducts
                    h2 Products
                    each val in products
                        ul
                            li
                                form(action=`/api/basket/addBasket/${val._id}/${token}`, method="post", class="formProduct")
                                    div.divSingleProduct
                                        a(href=`#`)= val.name
                                        label  di
                                        label(class="nameSeller")= " " + val.seller.firstName + " " + val.seller.lastName
                                        p= " Price: " + val.price + "â‚¬"
                                    .divButtonsProduct
                                        input(type="submit", value="Add to the basket ") 
                            hr

                

    
